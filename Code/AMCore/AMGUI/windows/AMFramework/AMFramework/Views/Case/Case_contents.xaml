<UserControl x:Class="AMFramework.Views.Case.Case_contents"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AMFramework.Views.Case"
             xmlns:plot="clr-namespace:InteractiveDataDisplay.WPF;assembly=InteractiveDataDisplay.WPF"
             xmlns:phase_1="clr-namespace:AMFramework.Components.Charting.LinePhaseChart"
             xmlns:phase="clr-namespace:AMFramework.Views.Phase"
             xmlns:pv ="clr-namespace:AMFramework.Views.Case.plotViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <phase:PhaseSelection_smallList x:Name="SelectedPhasesList" Grid.Row="0"/>
        <pv:Case_SpyderChart x:Name="MainP" Grid.Row="1"></pv:Case_SpyderChart>
        
        <ScrollViewer Grid.Row="1" Visibility="Hidden">
            <StackPanel x:Name="MainContent">
            
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
