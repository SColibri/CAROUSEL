<Window x:Class="AMControls_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMControls_Test"
        xmlns:plot="clr-namespace:AMControls.Charts.Scatter;assembly=AMControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <plot:ScatterPlot x:Name="scat" Margin="0">
            <Border x:Name="Tooltip" Background="WhiteSmoke" BorderBrush="Silver" BorderThickness="0.5" CornerRadius="4">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" Margin="0">
                        <TextBlock Text="X:" FontSize="12" FontWeight="Bold" Margin="5"/>
                        <TextBlock x:Name="XLocation" Margin="5" FontSize="13"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0">
                        <TextBlock Text="Y:" FontSize="12" FontWeight="Bold" Margin="5"/>
                        <TextBlock x:Name="YLocation" Margin="5" FontSize="13"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </plot:ScatterPlot>
    </Grid>
</Window>
